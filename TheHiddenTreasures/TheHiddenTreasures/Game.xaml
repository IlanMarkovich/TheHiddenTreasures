<Page
    x:Class="TheHiddenTreasures.Game"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TheHiddenTreasures"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Grid>
        <Canvas Name="GameCanvas" Background="Black">
            <Canvas.Projection>
                <PlaneProjection x:Name="GameCamera"/>
            </Canvas.Projection>
        </Canvas>

        <StackPanel Orientation="Vertical">
            <TextBlock Text="X: 0" Name="X_tb" Foreground="White" FontSize="50" FontWeight="SemiBold"/>
            <TextBlock Text="Y: 0" Name="Y_tb" Foreground="White" FontSize="50" FontWeight="SemiBold"/>
            <TextBlock Text="Level: 1" Name="Level_tb" Foreground="White" FontSize="50" FontWeight="SemiBold"/>
            <TextBlock Text="Time: 0" Name="Time_tb" Foreground="White" FontSize="50" FontWeight="SemiBold"/>
            <TextBlock Text="Coins: 0" Name="Coins_tb" Foreground="White" FontSize="50" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Page>
